<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

<!--topic-->
        <TextView
            android:id="@+id/text1"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Perimeter Calculator"
            android:textColor="@color/black"
            android:textSize="25dp"/>



<!--Image of square-->
        <ImageButton
            android:id="@+id/image_square"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/square" />

<!--Image of paralelogram-->

        <ImageButton
            android:id="@+id/image_paralelogram"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/paralelogram" />

<!--squre text-->
        <TextView
            android:id="@+id/text_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_square"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="Perimeter of Square"/>



<!--paralelogram text-->
        <TextView
            android:id="@+id/text_paralelogram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_square"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="Perimeter of paralelogram"/>



<!--Image of rectangle-->
        <ImageButton
            android:id="@+id/image_rectangle"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_below="@+id/text_square"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/rectangle" />


<!--Image of rhombus-->
        <ImageButton
            android:id="@+id/image_rhombus"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_below="@+id/text_paralelogram"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/rhombus" />

<!--rectangle text-->
        <TextView
            android:id="@+id/text_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_rectangle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="Perimeter of rectangle"/>



        <!--rhombus text-->
        <TextView
            android:id="@+id/text_rhombus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_rectangle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="Perimeter of rhombus"/>



 <!--Image of trapezoid-->
        <ImageButton
            android:id="@+id/image_trapezoid"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_below="@+id/text_rectangle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/trapezoid" />


<!--Image of triangle-->
        <ImageButton
            android:id="@+id/image_triangle"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_below="@+id/text_rhombus"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/triangle" />

<!--trapezoid text-->
        <TextView
            android:id="@+id/text_trapezoid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_trapezoid"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="Perimeter of trapezoid"/>



<!--triangle text-->
        <TextView
            android:id="@+id/text_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_trapezoid"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="Perimeter of triangle"/>



<!--Image of circle-->
        <ImageButton
            android:id="@+id/image_circle"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_below="@+id/text_trapezoid"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/circle" />

<!--circle text-->
        <TextView
            android:id="@+id/text_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_circle"
            android:layout_centerHorizontal="true"
            android:text="Circumference of a Circle"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>